        {
            "name": "CDE run simulation",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["simulate", "-i", "spaces.jsonlist", "-m", "metrics.jsonlist", "-n", "2", "--times", "1"],
            "justMyCode": true
