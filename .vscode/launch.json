            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["space", "-a", "5", "-a", "5", "-t", "0", "-t", "1", "-c", "0", "-c", "1", "-o", "spaces.jsonlist"],
