    "version": "0.2.0",
    "configurations": [        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "game simulation",
            "type": "python",
            "request": "launch",
            "program": "cli.py",
            "console": "integratedTerminal",
            "args": [
                "game",
                "-sim", "de-d-d-100:IntransitiveRegionGame",
                "--times", "1"
            ],
            "justMyCode": true
        },
        {
            "name": "num game space",
            "type": "python",
            "request": "launch",
            "program": "cli.py",
            "console": "integratedTerminal",
            "args": [
                "game-space",
                "-gid", "CompareOnOneGame",
                "-out", "num-game-spaces"
            ],
            "justMyCode": true
        }        
    ]
}